/* pages/index/index.wxss */
.order{
  width: 90%;
  height: 130px;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
  margin-bottom: 15px;
  border-radius: 10px;
  border: 1px solid #e3e3e3;
  padding: 10px;

  margin-top: 10px;
}
.deliverName{
  color: #ebb309;
  font-size: 25px;
  margin-bottom: 15px;
}
.toWhere{
  color: #aeaeae;
  margin-left: 20px;
  margin-bottom: 30px;
}
.detail{
  display: flex;
  float: right;
}
.detail>view{
  border-radius: 10px;
  width: 80px;
  height: 20px;
  padding: 3px;
  line-height: 20px;
  border: 1px solid #ebb309;
  background-color: #ffc20b;
  color: white;
  text-align: center;
}