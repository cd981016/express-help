/* pages/order/order.wxss */
.order{
  left: 0;
  right: 0;
  margin: auto;
  width: 80%;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid #e3e3e3;
  margin-bottom: 15px;
  margin-top: 15px;
}
.orderInfo{
  margin-bottom: 15px;
}
.orderInfo>view:nth-child(2){
  color: #818181;
  margin-left: 25px;
}
.orderInfo>view:nth-child(1){
  color: #ffc20b;
  margin-bottom: 5px;
  font-size: 19px;
  margin-left: 5px;
}
.login{
  background-color: #ffc20b;
  line-height: 35px;
  width: 90%;
  border-radius: 5px;
  border: 1px solid #efb70d;
  text-align: center;
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 10px;
  color: white;
}
.cancel{
  background-color: white;
  line-height: 35px;
  width: 90%;
  border-radius: 5px;
  border: 1px solid #efb70d;
  text-align: center;
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 10px;
  color: #ffc20b;
  margin-bottom: 20px;
}
.navName{
  color: #efb70d;
  font-size: 25px;
  text-align: center;
}
.say{
  color: #efb70d;
  font-size: 15px;
  text-align: center;
  margin-bottom: 20px;
  width: 100%;
  left: 0;
  right: 0;
  margin: auto;
  border-bottom: 1px solid #efb70d;
  padding-bottom:10px; 
}
.navAndSay{
  margin-top: 10px;
  margin-bottom: 30px;
}